                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            checkVerificationStatus();
        });

        function checkVerificationStatus() {
            $.ajax({
                url: '@Url.Action("CheckStatus", "IdentityVerification")',
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        updateStatusDisplay(response);
                    } else {
                        showError('Failed to check verification status');
                    }
                },
                error: function() {
                    showError('Error checking verification status');
                }
            });
        }

        function updateStatusDisplay(data) {
            let statusHtml = '';

            if (data.isVerified) {
                statusHtml = `
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        <strong>Verified!</strong> Your identity has been successfully verified.
                        <br><small>You can now post projects and place bids.</small>
                    </div>
                `;
            } else {
                statusHtml = `
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Not Verified</strong> Please complete identity verification to continue.
                        <br><small>You need to verify your identity before posting projects or placing bids.</small>
                    </div>
                `;
            }

            $('#verificationStatus').html(statusHtml);
        }

        function showError(message) {
            $('#verificationStatus').html(`
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i>
                    ${message}
                </div>
            `);
        }
    </script>
}
