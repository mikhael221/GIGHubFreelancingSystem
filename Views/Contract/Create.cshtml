@model Freelancing.Models.CreateContractViewModel
@{
    Layout = "_LayoutClient";
    ViewData["Title"] = "Create Contract - " + Model.ProjectName;
}

<link rel="stylesheet" href="~/css/signature-capture.css" />

<div class="p-4 sm:ml-64">
    <div class="p-4 mt-20">
        <div class="max-w-4xl mx-auto">
            <!-- Header -->
            <div class="flex items-center justify-between mb-6">
                <div class="flex items-center space-x-4">
                    <a href="@Url.Action("Details", "ManageProjectClient", new { id = Model.ProjectId })" class="text-blue-600 hover:text-blue-800">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                    </a>
                    <h1 class="text-3xl font-bold text-gray-900">Create Contract</h1>
                </div>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                    Draft
                </span>
            </div>

            <form asp-action="Create" method="post" class="space-y-6">
                <input type="hidden" asp-for="ProjectId" />
                <input type="hidden" asp-for="BiddingId" />

                <!-- Contract Template Selection -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Contract Template</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-6">
                        @foreach (var template in Model.AvailableTemplates)
                        {
                            <div class="border border-gray-200 rounded-lg p-4 cursor-pointer hover:border-blue-500 template-option" data-template-id="@template.Id">
                                @if (template.IsDefault)
                                {
                                    <input type="radio" asp-for="SelectedTemplateId" value="@template.Id" class="hidden template-radio" checked />
                                }
                                else
                                {
                                    <input type="radio" asp-for="SelectedTemplateId" value="@template.Id" class="hidden template-radio" />
                                }
                                <div class="flex items-center justify-between mb-2">
                                    <h3 class="font-medium text-gray-900">@template.Name</h3>
                                    @if (template.IsDefault)
                                    {
                                        <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">Default</span>
                                    }
                                </div>
                                <p class="text-sm text-gray-600">@template.Description</p>
                                <p class="text-xs text-gray-500 mt-2">Category: @template.Category</p>
                            </div>
                        }
                    </div>
                    <!-- Project Summary -->
                    <hr class="border-gray-300 mb-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Project Summary</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Project Name</label>
                            <p class="text-gray-900 bg-gray-50 p-2 rounded">@Model.ProjectName</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Category</label>
                            <p class="text-gray-900 bg-gray-50 p-2 rounded">@Model.ProjectCategory</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Freelancer</label>
                            <p class="text-gray-900 bg-gray-50 p-2 rounded">@Model.FreelancerName</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Agreed Amount</label>
                            <p class="text-gray-900 bg-gray-50 p-2 rounded font-semibold text-green-600">â‚±@Model.AgreedAmount</p>
                        </div>
                    </div>
                    <!-- Payment Terms -->
                    <hr class="border-gray-300 mb-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Payment Terms</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                        <div>
                            <label asp-for="UpfrontPercentage" class="block text-sm font-medium text-gray-700 mb-2">Upfront Payment (%)</label>
                            <input asp-for="UpfrontPercentage" type="number" min="0" max="100" class="w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="UpfrontPercentage" class="text-red-600 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="FinalPercentage" class="block text-sm font-medium text-gray-700 mb-2">Final Payment (%)</label>
                            <input asp-for="FinalPercentage" type="number" min="0" max="100" class="w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="FinalPercentage" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                    <!-- Revision Policy -->
                    <hr class="border-gray-300 mb-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Revision Policy</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                        <div>
                            <label asp-for="FreeRevisions" class="block text-sm font-medium text-gray-700 mb-2">Free Revisions</label>
                            <input asp-for="FreeRevisions" type="number" min="0" max="10" class="w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="FreeRevisions" class="text-red-600 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="AdditionalRevisionCost" class="block text-sm font-medium text-gray-700 mb-2">Additional Revision Cost (â‚±)</label>
                            <input asp-for="AdditionalRevisionCost" type="number" min="0" step="0.01" class="w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="AdditionalRevisionCost" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                    <!-- Timeline -->
                    <hr class="border-gray-300 mb-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Project Timeline</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 m-6">
                        <div>
                            <label asp-for="StartDate" class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
                            <input asp-for="StartDate" type="date" class="w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="StartDate" class="text-red-600 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="Deadline" class="block text-sm font-medium text-gray-700 mb-1">Deadline</label>
                            <input asp-for="Deadline" type="date" class="w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="Deadline" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                </div>

                <!-- Contract Preview -->
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-semibold text-gray-900">Contract Preview</h2>
                        <button type="button" id="refreshPreviewBtn" class="px-3 py-1 text-sm bg-blue-100 text-blue-700 rounded-md hover:bg-blue-200 focus:ring-2 focus:ring-blue-300">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                            </svg>
                            Refresh Preview
                        </button>
                    </div>
                    <div class="rounded-lg p-6 bg-gray-50 max-h-96 overflow-y-auto">
                        <div id="contractPreview" class="prose max-w-none">
                            <p class="text-gray-600">Fill in the contract details above and click "Refresh Preview" to see the contract content...</p>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex items-center justify-between bg-gray-50 p-4 rounded-lg">
                    <div class="text-sm text-gray-600">
                        <p>Review all terms carefully before creating the contract.</p>
                        <p>The freelancer will be notified to review and sign once created.</p>
                    </div>
                    <div class="flex space-x-3">
                        <a href="@Url.Action("Details", "ManageProjectClient", new { id = Model.ProjectId })" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                            Cancel
                        </a>
                        <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:ring-4 focus:ring-blue-300">
                            Create Contract
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Template selection
        const templateOptions = document.querySelectorAll('.template-option');
        const templateRadios = document.querySelectorAll('.template-radio');

        templateOptions.forEach(option => {
            option.addEventListener('click', function() {
                // Remove active class from all options
                templateOptions.forEach(opt => opt.classList.remove('border-blue-500', 'bg-blue-50'));

                // Add active class to clicked option
                this.classList.add('border-blue-500', 'bg-blue-50');

                // Check the corresponding radio button
                const templateId = this.dataset.templateId;
                templateRadios.forEach(radio => {
                    radio.checked = (radio.value === templateId);
                });

                // Auto-refresh preview when template changes
                generateContractPreview();
            });
        });

        // Set initial active state for default template
        const defaultTemplate = document.querySelector('.template-radio:checked');
        if (defaultTemplate) {
            const templateId = defaultTemplate.value;
            const defaultOption = document.querySelector(`[data-template-id="${templateId}"]`);
            if (defaultOption) {
                defaultOption.classList.add('border-blue-500', 'bg-blue-50');
            }
        }

        // Refresh preview button
        const refreshPreviewBtn = document.getElementById('refreshPreviewBtn');
        refreshPreviewBtn.addEventListener('click', function() {
            generateContractPreview();
        });

        // Auto-refresh preview when form fields change
        const formInputs = document.querySelectorAll('input, select, textarea');
        formInputs.forEach(input => {
            input.addEventListener('change', function() {
                generateContractPreview();
            });
        });

        // Generate initial preview
        generateContractPreview();

        function generateContractPreview() {
            const previewContainer = document.getElementById('contractPreview');

            // Get form values
            const selectedTemplate = document.querySelector('.template-radio:checked');
            const upfrontPayment = document.getElementById('UpfrontPercentage').value || 0;
            const finalPayment = document.getElementById('FinalPercentage').value || 0;
            const freeRevisions = document.getElementById('FreeRevisions').value || 0;
            const additionalCost = document.getElementById('AdditionalRevisionCost').value || 0;
            const startDate = document.getElementById('StartDate').value;
            const deadline = document.getElementById('Deadline').value;

            // Get project data from model
            const projectData = {
                projectName: '@Model.ProjectName',
                projectDescription: '@Model.ProjectDescription',
                clientName: '@Model.ClientName',
                clientEmail: '@Model.ClientEmail',
                freelancerName: '@Model.FreelancerName',
                freelancerEmail: '@Model.FreelancerEmail',
                agreedAmount: @Model.AgreedAmount,
                deliveryTimeline: '@Model.DeliveryTimeline',
                projectCategory: '@Model.ProjectCategory'
            };

            if (!selectedTemplate) {
                previewContainer.innerHTML = '<p class="text-gray-600">Please select a contract template first...</p>';
                return;
            }

            // Generate contract content based on template and form data
            const contractContent = generateContractContent(selectedTemplate.value, projectData, {
                upfrontPayment: parseInt(upfrontPayment),
                finalPayment: parseInt(finalPayment),
                freeRevisions: parseInt(freeRevisions),
                additionalCost: parseFloat(additionalCost),
                startDate: startDate,
                deadline: deadline
            });

            previewContainer.innerHTML = contractContent;
        }

        function generateContractContent(templateId, projectData, formData) {
            const templateName = document.querySelector(`[data-template-id="${templateId}"] h3`).textContent;

            return `
                <div class="contract-preview">
                    <h1 class="text-2xl font-bold mb-4 text-center">${templateName}</h1>

                    <div class="mb-6">
                        <h2 class="text-lg font-semibold mb-2 text-blue-800">1. PARTIES</h2>
                        <p><strong>Client:</strong> ${projectData.clientName} (${projectData.clientEmail})</p>
                        <p><strong>Freelancer:</strong> ${projectData.freelancerName} (${projectData.freelancerEmail})</p>
                    </div>

                    <div class="mb-6">
                        <h2 class="text-lg font-semibold mb-2 text-blue-800">2. PROJECT DETAILS</h2>
                        <p><strong>Project Name:</strong> ${projectData.projectName}</p>
                        <p><strong>Category:</strong> ${projectData.projectCategory}</p>
                        <p><strong>Description:</strong> ${projectData.projectDescription}</p>
                    </div>

                    <div class="mb-6">
                        <h2 class="text-lg font-semibold mb-2 text-blue-800">3. PAYMENT TERMS</h2>
                        <p><strong>Total Project Amount:</strong> â‚±${projectData.agreedAmount.toLocaleString()}</p>
                        <p><strong>Upfront Payment:</strong> ${formData.upfrontPayment}% (â‚±${(projectData.agreedAmount * formData.upfrontPayment / 100).toLocaleString()})</p>
                        <p><strong>Final Payment:</strong> ${formData.finalPayment}% (â‚±${(projectData.agreedAmount * formData.finalPayment / 100).toLocaleString()})</p>
                        <p><strong>Payment Schedule:</strong> Upfront payment due upon contract signing, final payment due upon project completion.</p>
                    </div>

                    <div class="mb-6">
                        <h2 class="text-lg font-semibold mb-2 text-blue-800">4. PROJECT TIMELINE</h2>
                        <p><strong>Start Date:</strong> ${formData.startDate ? new Date(formData.startDate).toLocaleDateString() : 'To be determined'}</p>
                        <p><strong>Deadline:</strong> ${formData.deadline ? new Date(formData.deadline).toLocaleDateString() : 'To be determined'}</p>
                        <p><strong>Delivery Timeline:</strong> ${projectData.deliveryTimeline}</p>
                    </div>

                    <div class="mb-6">
                        <h2 class="text-lg font-semibold mb-2 text-blue-800">5. REVISION POLICY</h2>
                        <p><strong>Free Revisions:</strong> ${formData.freeRevisions} revision(s) included in the project cost.</p>
                        <p><strong>Additional Revisions:</strong> â‚±${formData.additionalCost.toLocaleString()} per additional revision after the free revisions are used.</p>
                        <p><strong>Revision Scope:</strong> Minor changes to design, content, or functionality as agreed upon by both parties.</p>
                    </div>

                    <div class="mb-6">
                        <h2 class="text-lg font-semibold mb-2 text-blue-800">6. DELIVERABLES</h2>
                        <p>The freelancer will deliver the completed project according to the agreed specifications and timeline.</p>
                        <p>All deliverables will be provided in the format specified in the project requirements.</p>
                    </div>

                    <div class="mb-6">
                        <h2 class="text-lg font-semibold mb-2 text-blue-800">7. TERMS AND CONDITIONS</h2>
                        <ul class="list-disc pl-5 space-y-1">
                            <li>Both parties agree to the terms outlined in this contract.</li>
                            <li>The project will commence upon receipt of the upfront payment.</li>
                            <li>Any changes to the project scope must be agreed upon in writing.</li>
                            <li>Intellectual property rights will transfer to the client upon final payment.</li>
                            <li>This contract is binding and enforceable under applicable laws.</li>
                        </ul>
                    </div>

                    <div class="mt-8 pt-4 border-t border-gray-300">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <div>
                                <p class="font-semibold">Client Signature:</p>
                                <div class="border-b-2 border-gray-400 h-8 mt-2"></div>
                                <p class="text-sm text-gray-600 mt-1">${projectData.clientName}</p>
                                <p class="text-sm text-gray-600">Date: _______________</p>
                            </div>
                            <div>
                                <p class="font-semibold">Freelancer Signature:</p>
                                <div class="border-b-2 border-gray-400 h-8 mt-2"></div>
                                <p class="text-sm text-gray-600 mt-1">${projectData.freelancerName}</p>
                                <p class="text-sm text-gray-600">Date: _______________</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-6 p-3 bg-blue-50 rounded-lg">
                        <p class="text-sm text-blue-800 font-medium">ðŸ“‹ This is a preview of the contract that will be generated. The actual contract will include additional legal terms and be digitally signed by both parties.</p>
                    </div>
                </div>
            `;
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
