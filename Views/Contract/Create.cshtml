@model Freelancing.Models.CreateContractViewModel
@{
    Layout = "_LayoutClient";
    ViewData["Title"] = "Create Contract - " + Model.ProjectName;
}

<link rel="stylesheet" href="~/css/signature-capture.css" />

<div class="p-4 sm:ml-64">
    <div class="p-4 mt-20">
        <div class="max-w-4xl mx-auto">
            <!-- Header -->
            <div class="flex items-center justify-between mb-6">
                <div class="flex items-center space-x-4">
                    <a href="@Url.Action("Details", "ManageProjectClient", new { id = Model.ProjectId })" class="text-blue-600 hover:text-blue-800">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                    </a>
                    <h1 class="text-3xl font-bold text-gray-900">Create Contract</h1>
                </div>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                    Draft
                </span>
            </div>

            <form asp-action="Create" method="post" class="space-y-6">
                <input type="hidden" asp-for="ProjectId" />
                <input type="hidden" asp-for="BiddingId" />

                <!-- Contract Template Selection -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Contract Template</h2>
                    <p class="text-sm text-gray-600 mb-4">Please select a contract template to proceed:</p>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-6">
                        @foreach (var template in Model.AvailableTemplates)
                        {
                            <div class="border-1 border-gray-300 rounded-lg p-4 cursor-pointer hover:border-blue-500 hover:border-solid template-option transition-all duration-200" data-template-id="@template.Id">
                                <input type="radio" asp-for="SelectedTemplateId" value="@template.Id" class="hidden template-radio" />
                                <div class="flex items-center justify-between mb-2">
                                    <h3 class="font-medium text-gray-900">@template.Name</h3>
                                </div>
                                <p class="text-sm text-gray-600">@template.Description</p>
                                <p class="text-xs text-gray-500 mt-2">Category: @template.Category</p>
                            </div>
                        }
                    </div>
                    <span asp-validation-for="SelectedTemplateId" class="text-red-600 text-sm"></span>
                    <!-- Project Summary -->
                    <hr class="border-gray-300 mb-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Project Summary</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Project Name</label>
                            <p class="text-gray-900 bg-gray-50 p-2 rounded">@Model.ProjectName</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Category</label>
                            <p class="text-gray-900 bg-gray-50 p-2 rounded">@Model.ProjectCategory</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Freelancer</label>
                            <p class="text-gray-900 bg-gray-50 p-2 rounded">@Model.FreelancerName</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Agreed Amount</label>
                            <p class="text-gray-900 bg-gray-50 p-2 rounded font-semibold text-green-600">â‚±@Model.AgreedAmount</p>
                        </div>
                    </div>
                    <!-- Payment Terms -->
                    <hr class="border-gray-300 mb-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Payment Terms</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                        <div>
                            <label asp-for="UpfrontPercentage" class="block text-sm font-medium text-gray-700 mb-2">Upfront Payment (%)</label>
                            <input asp-for="UpfrontPercentage" type="number" min="0" max="100" class="w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="UpfrontPercentage" class="text-red-600 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="FinalPercentage" class="block text-sm font-medium text-gray-700 mb-2">Final Payment (%)</label>
                            <input asp-for="FinalPercentage" type="number" min="0" max="100" class="w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="FinalPercentage" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                    <div class="mb-6">
                        <div id="paymentTotal" class="text-sm text-gray-600 bg-gray-100 p-2 rounded">
                            Total: <span id="totalPercentage">0</span>% 
                            <span id="totalStatus" class="ml-2"></span>
                        </div>
                    </div>
                    <!-- Revision Policy -->
                    <hr class="border-gray-300 mb-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Revision Policy</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                        <div>
                            <label asp-for="FreeRevisions" class="block text-sm font-medium text-gray-700 mb-2">Free Revisions</label>
                            <input asp-for="FreeRevisions" type="number" min="0" max="10" class="w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="FreeRevisions" class="text-red-600 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="AdditionalRevisionCost" class="block text-sm font-medium text-gray-700 mb-2">Additional Revision Cost (â‚±)</label>
                            <input asp-for="AdditionalRevisionCost" type="number" min="0" step="0.01" class="w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="AdditionalRevisionCost" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                    <!-- Timeline -->
                    <hr class="border-gray-300 mb-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Project Timeline</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 m-6">
                        <div>
                            <label asp-for="StartDate" class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
                            <input asp-for="StartDate" type="date" class="w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="StartDate" class="text-red-600 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="Deadline" class="block text-sm font-medium text-gray-700 mb-1">Deadline</label>
                            <input asp-for="Deadline" type="date" class="w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="Deadline" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                </div>

                <!-- Contract Preview -->
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-semibold text-gray-900">Contract Preview</h2>
                        <button type="button" id="refreshPreviewBtn" class="px-3 py-1 text-sm bg-blue-100 text-blue-700 rounded-md hover:bg-blue-200 focus:ring-2 focus:ring-blue-300">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                            </svg>
                            Refresh Preview
                        </button>
                    </div>
                    <div class="rounded-lg p-6 bg-gray-50 max-h-96 overflow-y-auto">
                        <div id="contractPreview" class="prose max-w-none">
                            <p class="text-gray-600">Fill in the contract details above and click "Refresh Preview" to see the contract content...</p>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex items-center justify-between bg-gray-50 p-4 rounded-lg">
                    <div class="text-sm text-gray-600">
                        <p>Review all terms carefully before creating the contract.</p>
                        <p>The freelancer will be notified to review and sign once created.</p>
                    </div>
                    <div class="flex space-x-3">
                        <a href="@Url.Action("Details", "ManageProjectClient", new { id = Model.ProjectId })" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                            Cancel
                        </a>
                        <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:ring-4 focus:ring-blue-300">
                            Create Contract
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Template selection
        const templateOptions = document.querySelectorAll('.template-option');
        const templateRadios = document.querySelectorAll('.template-radio');

        templateOptions.forEach(option => {
            option.addEventListener('click', function() {
                // Remove active class from all options
                templateOptions.forEach(opt => {
                    opt.classList.remove('border-blue-500', 'bg-blue-50', 'border-solid');
                    opt.classList.add('border', 'border-gray-300');
                });

                // Add active class to clicked option
                this.classList.remove('border', 'border-gray-300');
                this.classList.add('border-blue-500', 'bg-blue-50', 'border-solid');

                // Check the corresponding radio button
                const templateId = this.dataset.templateId;
                templateRadios.forEach(radio => {
                    radio.checked = (radio.value === templateId);
                });

                // Auto-refresh preview when template changes
                generateContractPreview();
            });
        });

        // Set initial active state for selected template only
        const selectedTemplate = document.querySelector('.template-radio:checked');
        if (selectedTemplate) {
            const templateId = selectedTemplate.value;
            const selectedOption = document.querySelector(`[data-template-id="${templateId}"]`);
            if (selectedOption) {
                selectedOption.classList.remove('border-dashed', 'border-gray-300');
                selectedOption.classList.add('border-blue-500', 'bg-blue-50', 'border-solid');
            }
        }

        // Refresh preview button
        const refreshPreviewBtn = document.getElementById('refreshPreviewBtn');
        refreshPreviewBtn.addEventListener('click', function() {
            generateContractPreview();
        });

        // Payment terms auto-adjustment
        const upfrontInput = document.getElementById('UpfrontPercentage');
        const finalInput = document.getElementById('FinalPercentage');
        
        // Function to adjust payment percentages
        function adjustPaymentPercentages(changedField) {
            const upfront = parseInt(upfrontInput.value) || 0;
            const final = parseInt(finalInput.value) || 0;
            
            if (changedField === 'upfront') {
                // If upfront payment changed, adjust final payment
                const newFinal = Math.max(0, 100 - upfront);
                finalInput.value = newFinal;
            } else if (changedField === 'final') {
                // If final payment changed, adjust upfront payment
                const newUpfront = Math.max(0, 100 - final);
                upfrontInput.value = newUpfront;
            }
            
            // Ensure values don't exceed 100%
            if (upfront + final > 100) {
                if (changedField === 'upfront') {
                    finalInput.value = Math.max(0, 100 - upfront);
                } else {
                    upfrontInput.value = Math.max(0, 100 - final);
                }
            }
            
            // Update total display
            updatePaymentTotal();
            
            // Update preview
            generateContractPreview();
        }
        
        // Function to update payment total display
        function updatePaymentTotal() {
            const upfront = parseInt(upfrontInput.value) || 0;
            const final = parseInt(finalInput.value) || 0;
            const total = upfront + final;
            
            const totalElement = document.getElementById('totalPercentage');
            const statusElement = document.getElementById('totalStatus');
            const totalContainer = document.getElementById('paymentTotal');
            
            totalElement.textContent = total;
            
            if (total === 100) {
                statusElement.className = 'ml-2 text-green-600 font-medium';
                totalContainer.className = 'text-sm text-gray-600 bg-green-100 p-2 rounded';
            } else if (total > 100) {
                statusElement.className = 'ml-2 text-red-600 font-medium';
                totalContainer.className = 'text-sm text-gray-600 bg-red-100 p-2 rounded';
            } else {
                statusElement.className = 'ml-2 text-yellow-600 font-medium';
                totalContainer.className = 'text-sm text-gray-600 bg-yellow-100 p-2 rounded';
            }
        }
        
        // Add event listeners for payment percentage inputs
        upfrontInput.addEventListener('input', function() {
            adjustPaymentPercentages('upfront');
        });
        
        finalInput.addEventListener('input', function() {
            adjustPaymentPercentages('final');
        });
        
        // Auto-refresh preview when form fields change
        const formInputs = document.querySelectorAll('input, select, textarea');
        formInputs.forEach(input => {
            // Skip payment percentage inputs as they have their own handlers
            if (input.id !== 'UpfrontPercentage' && input.id !== 'FinalPercentage') {
                input.addEventListener('change', function() {
                    generateContractPreview();
                });
            }
        });

        // Initialize payment total display
        updatePaymentTotal();
        
        // Generate initial preview
        generateContractPreview();

        async function generateContractPreview() {
            const previewContainer = document.getElementById('contractPreview');

            // Get form values
            const selectedTemplate = document.querySelector('.template-radio:checked');
            const upfrontPayment = document.getElementById('UpfrontPercentage').value || 0;
            const finalPayment = document.getElementById('FinalPercentage').value || 0;
            const freeRevisions = document.getElementById('FreeRevisions').value || 0;
            const additionalCost = document.getElementById('AdditionalRevisionCost').value || 0;
            const startDate = document.getElementById('StartDate').value;
            const deadline = document.getElementById('Deadline').value;

            // Get project data from model
            const projectData = {
                projectName: '@Model.ProjectName',
                projectDescription: '@Model.ProjectDescription',
                clientName: '@Model.ClientName',
                clientEmail: '@Model.ClientEmail',
                freelancerName: '@Model.FreelancerName',
                freelancerEmail: '@Model.FreelancerEmail',
                agreedAmount: @Model.AgreedAmount,
                deliveryTimeline: '@Model.DeliveryTimeline',
                projectCategory: '@Model.ProjectCategory'
            };

            if (!selectedTemplate) {
                previewContainer.innerHTML = '<div class="text-center py-8"><div class="text-gray-600"><svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg><p class="text-lg font-medium">No Template Selected</p><p class="text-sm">Please select a contract template above to preview the contract content.</p></div></div>';
                return;
            }

            // Show loading state
            previewContainer.innerHTML = '<div class="text-center py-8"><div class="inline-flex items-center"><svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Loading contract preview...</div></div>';

            try {
            // Generate contract content based on template and form data
                const contractContent = await generateContractContent(selectedTemplate.value, projectData, {
                upfrontPayment: parseInt(upfrontPayment),
                finalPayment: parseInt(finalPayment),
                freeRevisions: parseInt(freeRevisions),
                additionalCost: parseFloat(additionalCost),
                startDate: startDate,
                deadline: deadline
            });

            previewContainer.innerHTML = contractContent;
            } catch (error) {
                console.error('Error generating contract preview:', error);
                previewContainer.innerHTML = '<p class="text-red-600">Please click refresh preview to view contract.</p>';
            }
        }

        // Cache for template contents to avoid repeated API calls
        let templateCache = {};

        async function generateContractContent(templateId, projectData, formData) {
            // Check if we have the template content cached
            if (!templateCache[templateId]) {
                try {
                    const response = await fetch(`/Contract/GetTemplateContent/${templateId}`);
                    const result = await response.json();
                    
                    if (!result.success) {
                        throw new Error(result.error || 'Failed to fetch template content');
                    }
                    
                    templateCache[templateId] = {
                        name: result.templateName,
                        content: result.templateContent
                    };
                } catch (error) {
                    console.error('Error fetching template content:', error);
                    // Fall back to basic template
                    return generateFallbackContent(templateId, projectData, formData);
                }
            }

            const template = templateCache[templateId];
            let content = template.content;

            // Generate dynamic sections
            const paymentTermsSection = `
                <p><strong>Payment Structure:</strong></p>
                <ul>
                    <li>Upfront Payment: ${formData.upfrontPayment}% (â‚±${(projectData.agreedAmount * formData.upfrontPayment / 100).toLocaleString()}) - Due upon contract signing</li>
                    <li>Final Payment: ${formData.finalPayment}% (â‚±${(projectData.agreedAmount * formData.finalPayment / 100).toLocaleString()}) - Due upon project completion</li>
                </ul>
                <p>All payments will be made according to the agreed schedule. Late payments may incur additional charges.</p>
            `;

            const revisionPolicySection = `
                <p><strong>Revision Terms:</strong></p>
                <ul>
                    <li>Free Revisions: ${formData.freeRevisions} revision round(s) included in the project cost</li>
                    <li>Additional Revisions: â‚±${formData.additionalCost.toLocaleString()} per additional revision round</li>
                    <li>Revision Scope: Minor changes and adjustments within the original project scope</li>
                </ul>
                <p>Each revision round includes feedback incorporation and refinements as agreed upon by both parties.</p>
            `;

            const projectTimelineSection = `
                <p><strong>Project Schedule:</strong></p>
                <ul>
                    <li>Project Start Date: ${formData.startDate ? new Date(formData.startDate).toLocaleDateString() : 'To be determined upon contract signing'}</li>
                    <li>Project Deadline: ${formData.deadline ? new Date(formData.deadline).toLocaleDateString() : 'To be determined based on scope'}</li>
                        </ul>
                <p>Timeline is subject to timely feedback and approvals from the Client. Delays in client feedback may extend the project timeline accordingly.</p>
            `;

            // Replace placeholders with actual data
            const replacements = {
                '{{CONTRACT_DATE}}': new Date().toLocaleDateString(),
                '{{CLIENT_NAME}}': projectData.clientName,
                '{{CLIENT_EMAIL}}': projectData.clientEmail,
                '{{FREELANCER_NAME}}': projectData.freelancerName,
                '{{FREELANCER_EMAIL}}': projectData.freelancerEmail,
                '{{PROJECT_NAME}}': projectData.projectName,
                '{{PROJECT_CATEGORY}}': projectData.projectCategory,
                '{{PROJECT_DESCRIPTION}}': projectData.projectDescription,
                '{{PROJECT_BUDGET}}': `â‚±${projectData.agreedAmount.toLocaleString()}`,
                '{{AGREED_AMOUNT}}': `â‚±${projectData.agreedAmount.toLocaleString()}`,
                '{{DELIVERY_TIMELINE}}': projectData.deliveryTimeline,
                '{{PROPOSAL_DETAILS}}': projectData.projectDescription,
                '{{PAYMENT_TERMS_SECTION}}': paymentTermsSection,
                '{{REVISION_POLICY_SECTION}}': revisionPolicySection,
                '{{PROJECT_TIMELINE_SECTION}}': projectTimelineSection
            };

            // Apply replacements
            for (const [placeholder, value] of Object.entries(replacements)) {
                content = content.replace(new RegExp(placeholder, 'g'), value);
            }

            return `
                <div class="contract-preview">
                    ${content}

                    <div class="mt-8 pt-4 border-t border-gray-300">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <div>
                                <p class="font-semibold">Client Signature:</p>
                                <div class="border-b-2 border-gray-400 h-8 mt-2"></div>
                                <p class="text-sm text-gray-600 mt-1">${projectData.clientName}</p>
                                <p class="text-sm text-gray-600">Date: _______________</p>
                            </div>
                            <div>
                                <p class="font-semibold">Freelancer Signature:</p>
                                <div class="border-b-2 border-gray-400 h-8 mt-2"></div>
                                <p class="text-sm text-gray-600 mt-1">${projectData.freelancerName}</p>
                                <p class="text-sm text-gray-600">Date: _______________</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-6 p-3 bg-blue-50 rounded-lg">
                        <p class="text-sm text-blue-800 font-medium">ðŸ“‹ This is a preview of the contract that will be generated. The actual contract will be digitally signed by both parties.</p>
                    </div>
                </div>
            `;
        }

        function generateFallbackContent(templateId, projectData, formData) {
            const templateName = document.querySelector(`[data-template-id="${templateId}"] h3`).textContent;

            return `
                <div class="contract-preview">
                    <h1 class="text-2xl font-bold mb-4 text-center">${templateName}</h1>
                    <p class="text-center text-gray-600 mb-6">Preview content is temporarily unavailable. The actual contract will be generated with the proper template.</p>
                    
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold mb-2 text-blue-800">Basic Contract Information</h2>
                        <p><strong>Client:</strong> ${projectData.clientName}</p>
                        <p><strong>Freelancer:</strong> ${projectData.freelancerName}</p>
                        <p><strong>Project:</strong> ${projectData.projectName}</p>
                        <p><strong>Amount:</strong> â‚±${projectData.agreedAmount.toLocaleString()}</p>
                    </div>
                </div>
            `;
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
